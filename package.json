{
    "name": "remark-excerpt",
    "version": "1.0.0",
    "type": "module",
    "engines": {
        "node": ">=14.16"
    },
    "description": "remark plugin to generate an excerpt from some paragraph of a remark-parse tree",
    "exports": "./index.js",
    "scripts": {
        "lint": "eslint --ext .js,.ts ./",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "eslintConfig": {
        "env": {
            "es2022": true
        },
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "unicorn",
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:unicorn/recommended"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alecvision/remark-morematter.git"
    },
    "keywords": [
        "unified",
        "remark",
        "remark-plugin",
        "plugin",
        "mdast",
        "markdown",
        "preview",
        "excerpt"
    ],
    "author": "Alec Helmturner <git@alecvision.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alecvision/remark-excerpt/issues"
    },
    "homepage": "https://github.com/alecvision/remark-excerpt#readme",
    "devDependencies": {
        "@types/mdast": "^3.0.10",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "eslint": "^8.19.0",
        "eslint-plugin-unicorn": "^43.0.0",
        "remark": "^14.0.2",
        "unified": "^10.1.2"
    },
    "dependencies": {
        "unist-util-is": "^5.1.1",
        "unist-util-visit": "^4.1.0"
    }
}
